<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView5"
                style="@style/contact_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contract Page 1 - 5" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/kenya_logo"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/udvlogo"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/textView4"
                style="@style/contract"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/contract1a"
                tools:layout_editor_absoluteX="117dp"
                tools:layout_editor_absoluteY="72dp" />

            <TextView
                android:id="@+id/storenametext"
                style="@style/contract"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="117dp"
                tools:layout_editor_absoluteY="72dp"
                android:hint="No Store set"
               />


            <TextView
                android:id="@+id/textView4a"
                style="@style/contract"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="of Address: "
                tools:layout_editor_absoluteX="117dp"
                tools:layout_editor_absoluteY="72dp" />

            <TextView
                android:id="@+id/roadtext"
                style="@style/contract"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                tools:layout_editor_absoluteX="117dp"
                tools:layout_editor_absoluteY="72dp"
                android:hint="[No Address Given]"/>

           <!-- <TextView
                android:id="@+id/textView4ab"
                style="@style/contract"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/contract1ba"
                tools:layout_editor_absoluteX="117dp"
                tools:layout_editor_absoluteY="72dp" />-->

          <!--  <TextView
                android:id="@+id/poboxtext"
                style="@style/contract"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                tools:layout_editor_absoluteX="117dp"
                tools:layout_editor_absoluteY="72dp"
                android:hint="No PO Box Set"/>-->


            <TextView
                android:id="@+id/textView4c"
                style="@style/contract"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/contract1c"
                tools:layout_editor_absoluteX="117dp"
                tools:layout_editor_absoluteY="72dp" />




            <TextView
                android:id="@+id/textView6"
                style="@style/contract"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Select YES have read and understood the above"
                tools:layout_editor_absoluteX="117dp"
                tools:layout_editor_absoluteY="72dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:padding="20dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NO"
                    android:textColor="#000000"
                    android:gravity="left"/>

                <Switch
                    android:id="@+id/switch_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="YES"
                    android:textColor="#000000"
                    android:gravity="right"/>
            </LinearLayout>

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next"
                android:onClick="next"
                style="@style/button_style"
                android:background="@drawable/button_state"
                android:inputType="textNoSuggestions"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>